<script type="text/javascript">

    $(document).ready(function () {
        setTimeout(function () {

            $('#btnStartTrail').click();

        }, 2000);

        $('#btnBuyNow').click(function () {
            var insuranceSelect = $("input[name='insurances']:checked").val();
          /*  alert(insuranceSelect)*/
            buyPack('@pack', insuranceSelect);
        });
    });

    function buyPack(packID, coverID) {
        setTimeout(function () {
            window.location.href = '@RegisterURL' + '?packID=' + packID +"&coverID="+coverID;
        }, 1500);
    }
</script>