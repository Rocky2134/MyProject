@*Modal*@
<div class="modal fade" id="ThankYou" tabindex="-1" role="dialog" aria-labelledby="Thankyou" aria-hidden="true" style="display:none;" data-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Thankyou">Insurance List</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <h2>Thank You</h2>
                    <i class='far fa-3x fa-smile' style="color: #87b2d6"></i><br />
                    <div style="margin-top: 20px;font-size:18px">
                        Thank you for using our service. <br />
                        Please select your interested insurance
                    </div>
                </div>
                <hr />
                <div style="width: 90%;margin: auto;border: none;">
                    <div class="row">
                        <div class="col-sm-12">

                            @{
                                if (insuraceList != null)
                                {

                                    foreach (var item in insuraceList)
                                    {
                                        <label><input type="radio" name="insurances" style="margin-bottom:10px" id="rbtn_@item.iMnuId" value="@item.IPk_CovLicId" /> <b>@item.sMenuName</b></label><br />
                                    }
                                }
                            }

                        </div>

                    </div>

                </div>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-primary" id="btnBuyNow"><i class="fa fa-shopping-cart"></i> Buy Now</button>
                @*<button type="button" class="btn btn-secondary" onclick="clearAll(); gotoLogin();" data-dismiss="modal">Cancel</button>*@
            </div>
        </div>
    </div>
</div>


